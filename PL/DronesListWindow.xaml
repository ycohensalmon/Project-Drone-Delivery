<Window x:Class="PL.DronesListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 

        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="DronesListWindow" Height="640" Width="800">
    <Grid Name="MainGrid" Background="DeepSkyBlue">
        <!--#region definition row and colons-->
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="secondeRow" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="BottonAdd" Content="add drone" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Top" Click="BottonAdd_Click"/>
            <Button x:Name="bottonExit" Content="exit" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="bottonExit_Click"/>
            <ListView x:Name="DronesListView"  Grid.Column="1" MouseDoubleClick="DroneView_DoubleClick">
            </ListView>
        </Grid>
        <Grid Name="UpGrid" Height="auto" Grid.Row="0" Width="auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions >

            <ComboBox Name="ComboStatusSelector" HorizontalAlignment= "Stretch" VerticalAlignment="Stretch" Grid.Column="1"
                       ToolTip="choose a status" SelectionChanged="ComboStatusSelector_SelectionChanged" />
            <ComboBox Name="ComboWeightSelector" HorizontalAlignment= "Stretch" VerticalAlignment="Stretch" Grid.Column="3"
                      ToolTip="choose a geight" FontWeight="Bold" FontStyle="Normal" FontFamily="Aharoni" HorizontalContentAlignment="Stretch" Height="67" FontSize="14" SelectionChanged="ComboWeightSelector_SelectionChanged"/>
            <Label Content="Status drone:" HorizontalAlignment= "Right" VerticalAlignment="Center" Grid.Column="0" FontSize="20"/>
            <Label Content="Weight:" HorizontalAlignment= "Right" VerticalAlignment="Center" Grid.Column="2" FontSize="20"/>
        </Grid>
    </Grid>
</Window>
