<Window x:Class="PL.DroneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        Height="620"
        Width="370">
    <Grid x:Name="MainGrid">
        <Grid x:Name="AddDrone" Visibility="Visible">
            <Border 
                CornerRadius="40" BorderBrush="#FF9900" 
                MouseDown="UIElement_OnMouseDown" BorderThickness="4" Background="White">


                <StackPanel
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center" >
                    <Grid Height="50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="Close"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}"
                                Click="Close_OnClick"
                                Background="#FF111111">
                            <materialDesign:PackIcon Kind="Close" Width="30" Height="30"/>
                        </Button>
                        <Image Source="C:\Users\ycohe\source\repos\ycohensalmon\dotNet5782_5588_8680\images\logo1.png"
                               HorizontalAlignment="Left"/>
                    </Grid>

                    <StackPanel Orientation="Vertical">
                        <materialDesign:PackIcon
                            HorizontalAlignment="Center"
                             Height="60"
                            Width="70"
                            Kind="Drone"
                            Opacity="1"
                            Foreground="#111111"/>
                        <TextBlock
                            x:Name="DroneTextBlock"
                            HorizontalAlignment="Center"
                            Style="{StaticResource MaterialDesignButtonTextBlock}"
                            FontSize="22"
                            Text="Add a drone"/>
                    </StackPanel>

                    <Grid Margin="30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBox
                                x:Name="Id"
                                Width="200"
                                FontSize="18"
                                materialDesign:HintAssist.Hint="Id"  
                                materialDesign:HintAssist.IsFloating="True" TextChanged="Id_TextChanged" TextInput="Id_TextInput"/>
                            <materialDesign:PackIcon
                                VerticalAlignment="Bottom"
                                Kind="User" 
                                Height="35"
                                Width="70"
                                Opacity="1"
                                Foreground="#6fb6d8"/>
                        </StackPanel>
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                            <ComboBox
                                x:Name="MaxWeight"
                                Width="200"
                                FontSize="18"
                                materialDesign:HintAssist.Hint="Max Weight"  
                                materialDesign:HintAssist.IsFloating="True"
                                SelectionChanged="maxWeight_SelectionChanged"/>
                            <materialDesign:PackIcon
                                VerticalAlignment="Bottom"
                                Kind="WeightKg"
                                Height="30"
                                Width="70"
                                Opacity="1"
                                Foreground="#6fb6d8"/>
                        </StackPanel>
                        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBox
                                x:Name="Model"
                                Width="200"
                                FontSize="18"
                                materialDesign:HintAssist.Hint="Model"  
                                materialDesign:HintAssist.IsFloating="True" TextChanged="Model_TextChanged"/>
                            <materialDesign:PackIcon
                                VerticalAlignment="Bottom"
                                Kind="Company" 
                                Height="35"
                                Width="70"
                                Opacity="1"
                                Foreground="#6fb6d8"/>
                        </StackPanel>
                        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center">
                            <ComboBox
                                x:Name="Station"
                                Width="200"
                                FontSize="18"
                                 materialDesign:HintAssist.Hint="Station Id"  
                                materialDesign:HintAssist.IsFloating="True" SelectionChanged="Station_SelectionChanged"/>
                            <materialDesign:PackIcon
                                VerticalAlignment="Bottom"
                                Kind="Place"
                                Height="30"
                                Width="70"
                                Opacity="1"
                                Foreground="#6fb6d8"/>
                        </StackPanel>
                        <StackPanel Grid.Row="8">
                            <Border
                                Grid.Column="0"
                                CornerRadius="30"
                                Height="60"
                                Margin="10"
                                Opacity="0.8"
                                BorderThickness="3"
                                MouseDown="UIElement_OnMouseLeave">


                                <Border.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="Black"/>
                                        <GradientStop Color="#FFFF9900" Offset="0.634"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Label 
                                    Content="Add"
                                    HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                    FontSize="20"
                                    Foreground="#111111"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>

        <Grid x:Name="UpdateDrone"  Visibility="Hidden">
            <Border CornerRadius="40" BorderBrush="#FF9900" 
                MouseDown="UIElement_OnMouseDown" BorderThickness="4" Background="White">
                <StackPanel >
                    <Grid Height="50" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="Closee"
                                Grid.Column="1"
                                Margin="0,0,10,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}"
                                Click="Close_OnClick"
                                Background="#FF111111">
                            <materialDesign:PackIcon Kind="Close" Width="31" Height="30" VerticalAlignment="Center"/>
                        </Button>
                        <Image Source="C:\Users\ycohe\source\repos\ycohensalmon\dotNet5782_5588_8680\images\logo1.png"
                               HorizontalAlignment="Center"/>
                    </Grid>
                    <StackPanel Orientation="Vertical">
                        <materialDesign:PackIcon
                            HorizontalAlignment="Center"
                             Height="60"
                            Width="70"
                            Kind="Drone"
                            Opacity="1"
                            Foreground="#111111"/>
                        <TextBlock
                            x:Name="UpdateTextBlock"
                            HorizontalAlignment="Center"
                            Style="{StaticResource MaterialDesignButtonTextBlock}"
                            FontSize="22"
                            Text="Update this drone"/>
                    </StackPanel>
                    <StackPanel>

                        <Label Name="DroneView"/>

                        <Button x:Name="bottonUpdate" Grid.Row ="1" Click="bottonUpdate_Click" Cursor="Hand" Background="#FF48A3C6" BorderBrush="{DynamicResource MaterialDesignDarkForeground}" Foreground="#FFFF9900"
                                Margin="10,10,10,10">
                            <Button.Content>Update</Button.Content>
                        </Button>
                        <Button x:Name="conectToParcel" Content="Send drone to parcel" Visibility="Hidden" Click="conectToParcel_Click" Margin="10,10,10,0" Background="#FF48A3C6" Foreground="#FFFF9900" Cursor="Hand"/>

                    </StackPanel>


                </StackPanel>

            </Border>
            <TextBox
                Visibility="Hidden"
                    Name="WrongText"
                    FontSize="15"
                    TextAlignment="Left"
                    Foreground="Red"
                />

        </Grid>

    </Grid>
</Window>
