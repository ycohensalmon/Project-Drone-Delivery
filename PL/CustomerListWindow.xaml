                                <GridViewColumn DisplayMemberBinding="{Binding Path=ParcelsHeRecieved}" Header="Parcels Recieved" Width="100"/>
                                <GridViewColumn DisplayMemberBinding="{Binding Path=ParcelsOnTheWay}" Header="Parcels On Way" Width="100"/>
                                <GridViewColumn DisplayMemberBinding="{Binding Path=ParcelsShippedAndNotDelivered}" Header="Not Delivered" Width="100"/>
                                <GridViewColumn DisplayMemberBinding="{Binding Path=ParcelsShippedAndDelivered}" Header="Delivered" Width="100"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
