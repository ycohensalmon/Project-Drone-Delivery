                            <materialDesign:PackIcon Kind="ArrowBack" Width="30" Height="30"/>
                        </Button>
                    </Grid>

                    <ListView x:Name="custumerInListListVie" Grid.Row="2" Margin="15 0">
                        <ListView.View>
